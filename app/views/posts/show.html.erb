
<div id="posts_show_content" class="skinny_wrapper wrapper_padding"
  >
   <header>
      <p class="date"><%= @post.created_at.strftime('%A, %B, %d')%> </p>
      <br>
      <h1><%= @post.title %></h1>
      <hr>
    </header>
    <div id="content"></div>
        <%= markdown @post.content %>
    
       <hr>
        <div id="share_box">
          <p>Share the Do List</p>
          <a href="#"><i class="fab fa-facebook"></i></a>
        
       </div>
       <hr>
  </div>
  
    <div class="pagination">
      <span class="previous_page disabled">← Previous</span>
      <em class="current">1</em>
      <a rel="next" href="#">2</a>
      <a class="next_page" href="#">Next →</a>
  </div>





 

<br>
<br>

<%= link_to "Edit", edit_post_path(@post) %>
<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?"} %>